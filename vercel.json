{
  "buildCommand": "./vercel-build-fixed.sh",
  "outputDirectory": "client/dist",
  "builds": [
    {
      "src": "client/dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/dist/assets/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/client/dist/js/$1"
    },
    {
      "src": "/favicon.svg",
      "dest": "/client/dist/favicon.svg"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/dist/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
