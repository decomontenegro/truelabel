# Database - PostgreSQL
DATABASE_URL="postgresql://[user]:[password]@[host]:[port]/[database]?sslmode=require"

# JWT - IMPORTANTE: Gerar uma chave segura!
JWT_SECRET="GERAR-CHAVE-SEGURA-AQUI"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="production"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH="./uploads"

# CORS - URL do frontend em produção
FRONTEND_URL="https://seu-app.vercel.app"
CORS_ORIGIN="https://seu-app.vercel.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12

# QR Code - URL de produção
QR_CODE_BASE_URL="https://seu-app.vercel.app/validation"

# Email (opcional)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# Redis (opcional - para cache)
REDIS_ENABLED="false"
REDIS_URL=""

# Monitoring (opcional)
SENTRY_DSN=""
LOG_LEVEL="info"