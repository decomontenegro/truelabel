# Local Development Environment
NODE_ENV=development

# Backend Port
PORT=5000

# Frontend Port (configured in vite.config.ts)
VITE_PORT=5001

# Database
DATABASE_URL="file:./dev.db"

# JWT Secret
JWT_SECRET=local-development-secret-key-change-in-production

# API URLs
VITE_API_BASE_URL=http://localhost:5000/api/v1
VITE_QR_BASE_URL=http://localhost:5001

# Redis (optional for local)
REDIS_URL=redis://localhost:6379

# Email (optional for local)
EMAIL_FROM=noreply@truelabel.local
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# AWS (optional for local)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=

# Monitoring (optional for local)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false